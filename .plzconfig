[please]
version = 15.13.0

[go]
importpath = github.com/sagikazarmark/todobackend-go-kit

[buildconfig]
golangci-lint-version = 1.36.0
gotestsum-version = 1.6.1
openapi-generator-version = v4.3.1
go-bindata-version = 3.22.0
protoc-version = 3.14.0
protoc-gen-go-version = 1.25.0
protoc-gen-go-grpc-version = 1.1.0
protoc-gen-kit-version = 0.2.0
buf-version = 0.36.0

[alias "make"]
desc = Build and export the outputs of targets
cmd = export outputs -o .

[alias "lint"]
desc = Runs linters for this repo
cmd = run ///pleasings2//tools/go:golangci-lint -- run

[alias "gotest"]
desc = Runs tests for this repo
cmd = run ///pleasings2//tools/go:gotestsum -- --no-summary=skipped --junitfile plz-out/log/gotestsum.xml --format short -- -race -covermode=atomic -coverprofile=plz-out/log/coverage.txt ./...

[alias "generate"]
desc = Generate code
cmd = run //:generate --

[alias "proto"]
desc = Run protobuf generator
cmd = run //:proto --
